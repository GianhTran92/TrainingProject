<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5">
    <RelativeLayout
        android:layout_weight="2"
        android:id="@+id/img_background_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button.margin.top"
        android:layout_marginLeft="@dimen/button.margin.left.and.right"
        android:layout_marginRight="@dimen/button.margin.left.and.right"
        android:background="@drawable/background_button">
        <ImageView
            android:id="@+id/img_word_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/animal_avatar"/>
        <ImageView
            android:id="@+id/img_icon_back"
            android:layout_width="@dimen/image.icon.back.layout.height"
            android:layout_height="@dimen/image.icon.back.layout.height"
            android:layout_below="@+id/img_word_avatar"
            android:src="@drawable/icon_back"
            android:layout_marginLeft="@dimen/image.icon.back.marginleftright"/>
        <TextView
            android:id="@+id/txt_word"
            android:text="@string/hello_world"
            android:textSize="24sp"
            android:textColor="@color/blue_background"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image.icon.back.layout.height"
            android:layout_below="@+id/img_word_avatar"
            android:layout_toRightOf="@+id/img_icon_back"/>
        <ImageView
            android:id="@+id/img_icon_next"
            android:layout_width="@dimen/image.icon.back.layout.height"
            android:layout_height="@dimen/image.icon.back.layout.height"
            android:layout_marginRight="@dimen/image.icon.back.layout.height"
            android:layout_below="@+id/img_word_avatar"
            android:src="@drawable/icon_next"
            android:layout_toRightOf="@+id/txt_word"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button.margin.top.two"
        android:layout_marginLeft="@dimen/button.margin.left.and.right"
        android:layout_marginRight="@dimen/button.margin.left.and.right"
        android:layout_marginBottom="@dimen/button.margin.bottom"
        android:background="@drawable/background_button"/>
</LinearLayout>
