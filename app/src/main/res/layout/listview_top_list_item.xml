<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="30">
    <vn.asiantech.learnenglish.core.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/circle.imageView.width"
        android:layout_height="@dimen/circle.imageView.height"
        android:layout_marginBottom="@dimen/circle.imageView.margin.top.and.bottom"
        android:layout_marginTop="@dimen/circle.imageView.margin.top.and.bottom"
        android:src="@drawable/animal_avatar"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/txtTitle"
        android:layout_weight="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/textView.margin.left"
        android:text="@string/textview.title.text.animal"
        android:textColor="@color/Black"
        android:textSize="@dimen/text.title.textSize"
        android:layout_toRightOf="@+id/imgAvatar"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imgFavorite"
        android:layout_weight="1"
        android:layout_width="@dimen/image.layout.height"
        android:layout_height="wrap_content"
        android:src="@drawable/ico_favorite"
        android:layout_alignBottom="@+id/txtTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"/>
</LinearLayout>