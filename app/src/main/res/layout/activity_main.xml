<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <vn.asiantech.learnenglish.core.ActionBarCustom
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar.layout.height">
    </vn.asiantech.learnenglish.core.ActionBarCustom>
    <android.support.v4.view.ViewPager
        android:id="@+id/vpTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tabars_height"
        android:layout_below="@+id/toolbar"/>

    <vn.asiantech.learnenglish.tabstrip.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        app:pstsIndicatorColor="@android:color/transparent"
        app:pstsIndicatorHeight="0dp"
        app:pstsShouldExpand="true"
        android:background="@color/taptrip.background"
        android:layout_height="@dimen/tabars_height" />
</RelativeLayout>
