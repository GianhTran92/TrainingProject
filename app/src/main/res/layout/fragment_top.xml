<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/button.margin.bottom"
            android:layout_marginTop="@dimen/button.margin.top"
            android:layout_margin="@dimen/button.margin.left.and.right"
            android:background="@drawable/background_button"/>
        <ListView
            android:id="@+id/lvTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/listView.margin.left.and.right"
            android:layout_marginRight="@dimen/listView.margin.left.and.right"
            android:layout_marginTop="@dimen/listView.margin.top"></ListView>
    </RelativeLayout>
</LinearLayout>
